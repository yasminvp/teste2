  <script>
    // Animação de scroll suave para links internos
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });

    // Animação de entrada dos elementos
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    }, observerOptions);

    document.querySelectorAll('.fade-in').forEach(el => {
      observer.observe(el);
    });

    // Formulário agora usa Formspree - não precisa de JavaScript personalizado

    // Pilares interativos
    let activePilar = null;

    function activatePilar(pilarNumber) {
      const pilar = document.getElementById(`pilar-${pilarNumber}`);
      const details = pilar.querySelector('.pilar-details');
      const indicator = document.getElementById(`indicator-${pilarNumber}`);
      
      // Se o pilar já está ativo, desativa
      if (activePilar === pilarNumber) {
        deactivateAllPilars();
        activePilar = null;
        return;
      }
      
      // Desativa todos os pilares primeiro
      deactivateAllPilars();
      
      // Ativa o pilar selecionado
      activePilar = pilarNumber;
      
      pilar.classList.add('active');
      details.classList.add('active');
      indicator.classList.add('active');
    }

    function deactivateAllPilars() {
      for (let i = 1; i <= 3; i++) {
        const pilar = document.getElementById(`pilar-${i}`);
        const details = pilar.querySelector('.pilar-details');
        const indicator = document.getElementById(`indicator-${i}`);
        
        pilar.classList.remove('active');
        details.classList.remove('active');
        indicator.classList.remove('active');
      }
    }

    // Função para alternar som do vídeo
    function toggleMute() {
      const video = document.getElementById('heroVideo');
      const button = document.getElementById('muteButton');
      
      if (video.muted) {
        video.muted = false;
        button.textContent = '🔊';
      } else {
        video.muted = true;
        button.textContent = '🔇';
      }
    }

    // Ponte 3D grande interativa
    function activateBridge() {
      const particles = document.getElementById('bridgeParticles');
      const center = document.getElementById('bridgeCenter');
      const bridgeLeft = document.getElementById('bridgeLeft');
      const bridgeRight = document.getElementById('bridgeRight');
      const leftCables = document.getElementById('leftCables');
      const rightCables = document.getElementById('rightCables');
      const centerLeftCables = document.getElementById('centerLeftCables');
      const centerRightCables = document.getElementById('centerRightCables');
      const crossCables = document.getElementById('crossCables');
      const leftTower = document.getElementById('leftTower');
      const rightTower = document.getElementById('rightTower');
      const centerTower = document.getElementById('centerTower');
      
      if (particles) particles.style.opacity = '1';
      if (center) {
        center.style.transform = 'scale(1.2)';
        center.style.boxShadow = '0 12px 35px rgba(212,175,55,0.8)';
      }
      if (bridgeLeft) {
        bridgeLeft.style.strokeWidth = '12';
        bridgeLeft.style.filter = 'drop-shadow(0 0 8px var(--gold-2))';
      }
      if (bridgeRight) {
        bridgeRight.style.strokeWidth = '12';
        bridgeRight.style.filter = 'drop-shadow(0 0 8px var(--gold-2))';
      }
      if (leftCables) {
        leftCables.style.opacity = '1';
        leftCables.style.filter = 'drop-shadow(0 0 4px var(--gold))';
      }
      if (rightCables) {
        rightCables.style.opacity = '1';
        rightCables.style.filter = 'drop-shadow(0 0 4px var(--gold))';
      }
      if (centerLeftCables) {
        centerLeftCables.style.opacity = '1';
        centerLeftCables.style.filter = 'drop-shadow(0 0 4px var(--gold))';
      }
      if (centerRightCables) {
        centerRightCables.style.opacity = '1';
        centerRightCables.style.filter = 'drop-shadow(0 0 4px var(--gold))';
      }
      if (crossCables) {
        crossCables.style.opacity = '0.8';
        crossCables.style.filter = 'drop-shadow(0 0 6px var(--gold-2))';
      }
      if (leftTower) leftTower.style.filter = 'drop-shadow(0 0 6px var(--gold))';
      if (rightTower) rightTower.style.filter = 'drop-shadow(0 0 6px var(--gold))';
      if (centerTower) centerTower.style.filter = 'drop-shadow(0 0 8px var(--gold-2))';
    }
    
    function deactivateBridge() {
      const particles = document.getElementById('bridgeParticles');
      const center = document.getElementById('bridgeCenter');
      const bridgeLeft = document.getElementById('bridgeLeft');
      const bridgeRight = document.getElementById('bridgeRight');
      const leftCables = document.getElementById('leftCables');
      const rightCables = document.getElementById('rightCables');
      const centerLeftCables = document.getElementById('centerLeftCables');
      const centerRightCables = document.getElementById('centerRightCables');
      const crossCables = document.getElementById('crossCables');
      const leftTower = document.getElementById('leftTower');
      const rightTower = document.getElementById('rightTower');
      const centerTower = document.getElementById('centerTower');
      
      if (particles) particles.style.opacity = '0';
      if (center) {
        center.style.transform = 'scale(1)';
        center.style.boxShadow = '0 8px 25px rgba(212,175,55,0.5)';
      }
      if (bridgeLeft) {
        bridgeLeft.style.strokeWidth = '8';
        bridgeLeft.style.filter = 'none';
      }
      if (bridgeRight) {
        bridgeRight.style.strokeWidth = '8';
        bridgeRight.style.filter = 'none';
      }
      if (leftCables) {
        leftCables.style.opacity = '0.8';
        leftCables.style.filter = 'none';
      }
      if (rightCables) {
        rightCables.style.opacity = '0.8';
        rightCables.style.filter = 'none';
      }
      if (centerLeftCables) {
        centerLeftCables.style.opacity = '0.6';
        centerLeftCables.style.filter = 'none';
      }
      if (centerRightCables) {
        centerRightCables.style.opacity = '0.6';
        centerRightCables.style.filter = 'none';
      }
      if (crossCables) {
        crossCables.style.opacity = '0.4';
        crossCables.style.filter = 'none';
      }
      if (leftTower) leftTower.style.filter = 'none';
      if (rightTower) rightTower.style.filter = 'none';
      if (centerTower) centerTower.style.filter = 'none';
    }

    // Animação do texto de progresso
    const progressTexts = [
      "Iniciando jornada de transformação...",
      "Identificando necessidades do cliente...",
      "Aplicando estratégia UGC personalizada...",
      "Criando conexão emocional profunda...",
      "Posicionando marca como única opção...",
      "Dominância de mercado alcançada! 👑"
    ];
    
    let currentTextIndex = 0;
    const progressTextElement = document.getElementById('progressText');
    
    function updateProgressText() {
      if (progressTextElement) {
        progressTextElement.style.opacity = '0';
        setTimeout(() => {
          progressTextElement.textContent = progressTexts[currentTextIndex];
          progressTextElement.style.opacity = '1';
          currentTextIndex = (currentTextIndex + 1) % progressTexts.length;
        }, 300);
      }
    }
    
    // Atualizar texto a cada 2 segundos
    setInterval(updateProgressText, 2000);
    
    // Iniciar com o primeiro texto
    setTimeout(updateProgressText, 1000);

    // Filosofia interativa
    function activatePhilosophy(number) {
      const card = document.getElementById(`philosophy-${number}`);
      const icon = card.querySelector('.philosophy-icon > div');
      const energyRings = card.querySelectorAll('.energy-ring');
      const details = card.querySelector('.philosophy-details');
      const title = card.querySelector('h3');
      
      // Ativar efeitos visuais
      card.style.background = 'rgba(139,21,56,0.05)';
      card.style.borderColor = 'var(--gold-2)';
      card.style.transform = 'translateY(-8px) scale(1.02)';
      card.style.boxShadow = '0 20px 40px rgba(139,21,56,0.3)';
      
      // Ícone
      icon.style.transform = 'scale(1.2)';
      icon.style.filter = 'drop-shadow(0 0 12px var(--gold-2))';
      
      // Anéis de energia
      energyRings.forEach(ring => {
        ring.style.opacity = '0.6';
      });
      
      // Expandir detalhes
      details.style.maxHeight = '200px';
      details.style.opacity = '1';
      details.style.marginTop = '24px';
      
      // Título brilhante
      title.style.textShadow = '0 0 20px var(--gold-2)';
      title.style.color = 'var(--gold)';
    }
    
    function deactivatePhilosophy(number) {
      const card = document.getElementById(`philosophy-${number}`);
      const icon = card.querySelector('.philosophy-icon > div');
      const energyRings = card.querySelectorAll('.energy-ring');
      const details = card.querySelector('.philosophy-details');
      const title = card.querySelector('h3');
      
      // Desativar efeitos visuais
      card.style.background = '#3a3a3a';
      card.style.borderColor = 'var(--gold)';
      card.style.transform = 'translateY(0) scale(1)';
      card.style.boxShadow = '0 4px 20px rgba(139,21,56,0.1)';
      
      // Ícone
      icon.style.transform = 'scale(1)';
      icon.style.filter = 'none';
      
      // Anéis de energia
      energyRings.forEach(ring => {
        ring.style.opacity = '0';
      });
      
      // Recolher detalhes
      details.style.maxHeight = '0';
      details.style.opacity = '0';
      details.style.marginTop = '0';
      
      // Título normal
      title.style.textShadow = 'none';
      title.style.color = '#ffffff';
    }

    // Botões de serviços
    document.querySelectorAll('.btn-primary').forEach(btn => {
      btn.addEventListener('click', (e) => {
        if (e.target.textContent === 'Escolher Plano' || e.target.textContent === 'Começar Projeto' || e.target.textContent === 'Vamos Conversar') {
          document.querySelector('#contato').scrollIntoView({
            behavior: 'smooth'
          });
        }
      });
    });

    // Funções para mostrar/esconder observações
    function showObservacoes(card) {
      const observacoes = card.querySelector('.observacoes-hover');
      if (observacoes) {
        observacoes.style.maxHeight = '300px';
        observacoes.style.opacity = '1';
      }
    }
    
    function hideObservacoes(card) {
      const observacoes = card.querySelector('.observacoes-hover');
      if (observacoes) {
        observacoes.style.maxHeight = '0';
        observacoes.style.opacity = '0';
      }
    }

    // Funções interativas das skills
    function activateSkill(card, type) {
      const glow = card.querySelector('.skill-glow');
      const icon = card.querySelector('.skill-icon');
      const title = card.querySelector('h5');
      const description = card.querySelector('p');
      
      // Efeitos visuais baseados no tipo
      if (type === 'soft') {
        // Soft skills - tons dourados
        card.style.borderColor = 'var(--gold)';
        card.style.transform = 'translateY(-4px) scale(1.02)';
        card.style.boxShadow = '0 12px 30px rgba(184,134,11,0.5)';
        card.style.background = '#2a2a2a';
        glow.style.opacity = '1';
        
        icon.style.background = 'linear-gradient(135deg, var(--gold), var(--gold-2))';
        icon.style.borderColor = 'var(--gold)';
        icon.style.transform = 'scale(1.1)';
        icon.style.boxShadow = '0 0 20px rgba(184,134,11,0.6)';
        
        title.style.color = 'var(--gold)';
        title.style.textShadow = '0 0 8px rgba(184,134,11,0.4)';
        
      } else if (type === 'hard') {
        // Hard skills - tons bronze/cobre
        card.style.borderColor = 'var(--gold-2)';
        card.style.transform = 'translateY(-4px) scale(1.02)';
        card.style.boxShadow = '0 12px 30px rgba(205,133,63,0.5)';
        card.style.background = '#2a2a2a';
        glow.style.opacity = '1';
        
        icon.style.background = 'linear-gradient(135deg, var(--gold-2), var(--gold))';
        icon.style.borderColor = 'var(--gold-2)';
        icon.style.transform = 'scale(1.1)';
        icon.style.boxShadow = '0 0 20px rgba(205,133,63,0.6)';
        
        title.style.color = 'var(--gold-2)';
        title.style.textShadow = '0 0 8px rgba(205,133,63,0.4)';
      }
      
      description.style.color = '#ffffff';
    }
    
    function deactivateSkill(card) {
      const glow = card.querySelector('.skill-glow');
      const icon = card.querySelector('.skill-icon');
      const title = card.querySelector('h5');
      const description = card.querySelector('p');
      
      // Resetar todos os efeitos
      card.style.borderColor = 'var(--gold)';
      card.style.transform = 'translateY(0) scale(1)';
      card.style.boxShadow = 'none';
      card.style.background = '#1a1a1a';
      glow.style.opacity = '0';
      
      icon.style.background = 'linear-gradient(135deg, rgba(184,134,11,0.2), rgba(255,215,0,0.1))';
      icon.style.borderColor = 'rgba(184,134,11,0.3)';
      icon.style.transform = 'scale(1)';
      icon.style.boxShadow = 'none';
      
      title.style.color = '#ffffff';
      title.style.textShadow = 'none';
      
      description.style.color = '#cccccc';
    }

    /* ===== Envio Formspree com feedback inline ===== */
    (function () {
      const form = document.getElementById('contatoForm');
      if (!form) return;

      const btn  = document.getElementById('btnEnviar');
      const ok   = document.getElementById('formOk');
      const err  = document.getElementById('formErro');

      function show(el){ el.style.display='block'; }
      function hide(el){ el.style.display='none'; }
      function resetMsgs(){ hide(ok); hide(err); }

      form.addEventListener('submit', async function (e) {
        e.preventDefault();
        resetMsgs();

        const original = btn.textContent;
        btn.disabled = true;
        btn.textContent = 'Enviando...';

        try {
          const data = new FormData(form);
          if (data.get('_gotcha')) { btn.disabled = false; btn.textContent = original; return; }

          const resp = await fetch(form.action, {
            method: 'POST',
            body: data,
            headers: { 'Accept': 'application/json' }
          });

          if (resp.ok) {
            show(ok);
            form.reset();
          } else {
            let message = 'Não foi possível enviar. Tente novamente.';
            try {
              const j = await resp.json();
              if (j?.errors?.length) message = j.errors.map(e => e.message).join(' ');
            } catch(_) {}
            document.getElementById('formErro').textContent = message;
            show(err);
          }
        } catch (_) {
          show(err);
        } finally {
          btn.disabled = false;
          btn.textContent = original;
        }
      });
    })();
  </script>
